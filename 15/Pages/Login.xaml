<Page x:Class="_15.Pages.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_15.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="250" d:DesignWidth="300"
      Background="White" Foreground="Black" Height="250" Width="300"
      Title="Login">

    <Grid>

        <GroupBox Header="Authorization" Height="250" Width="300" HorizontalAlignment="Center">
            <StackPanel>
                <Label Content="Login"/>
                <TextBox x:Name="TBlogin"/>
                <Label Content="Password"/>
                <TextBox x:Name="TBpassword"/>
                <Separator/>
                <Button Content="Log In" Background="AliceBlue" Click="BTLogin"/>
            </StackPanel>
        </GroupBox>

    </Grid>
</Page>
